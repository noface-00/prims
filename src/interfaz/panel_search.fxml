<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root"
            prefHeight="508.0" prefWidth="817.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="interfaz.controllers.GalleryController">

    <!-- 游늯 BARRA DE PAGINACI칍N -->
    <bottom>
        <HBox fx:id="paginationBar"
              alignment="CENTER"
              prefHeight="50.0"
              spacing="8"
              BorderPane.alignment="CENTER">

            <children>

                <Button fx:id="btnPrev" text="Anterior"
                        onAction="#previousPage"
                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: black;
                               -fx-padding: 6 12; -fx-font-weight: bold;">
                    <font><Font name="Poppins SemiBold" size="12.0" /></font>
                </Button>

                <!-- Los n칰meros de p치gina se agregan din치micamente -->

                <Button fx:id="btnNext" text="Siguiente"
                        onAction="#nextPage"
                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: black;
                               -fx-padding: 6 12; -fx-font-weight: bold;">
                    <font><Font name="Poppins SemiBold" size="12.0" /></font>
                </Button>

            </children>
        </HBox>
    </bottom>


    <!-- 游꿢 GALER칈A DE PRODUCTOS -->
    <center>
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    style="-fx-background-color: white; -fx-border-color: white;"
                    stylesheets="@css/style.css"
                    BorderPane.alignment="CENTER">

            <content>
                <GridPane fx:id="gridPane"
                          alignment="CENTER"
                          hgap="25" vgap="25"
                          style="-fx-padding: 30; -fx-background-color: white;" />
            </content>
        </ScrollPane>
    </center>


    <!-- 游빔 PANEL IZQUIERDO DE FILTROS -->
    <left>
        <ScrollPane fx:id="filterPanel"
                    hbarPolicy="NEVER"
                    prefWidth="200.0"
                    BorderPane.alignment="CENTER"
                    stylesheets="@css/style.css">

            <content>
                <VBox alignment="CENTER"
                      prefWidth="199.0"
                      spacing="20"
                      style="-fx-padding: 20;">

                    <!-- 游댳 Filtro: Precio -->
                    <VBox spacing="12">
                        <Label text="Precio:">
                            <font><Font name="Poppins SemiBold" size="15.0" /></font>
                        </Label>

                        <HBox alignment="CENTER" spacing="10">
                            <TextField fx:id="txtPrecioMin"
                                       promptText="Min"
                                       style="-fx-background-color: white; -fx-border-color: black;
                                              -fx-padding: 6; -fx-background-radius: 6;" />

                            <Label text="hasta">
                                <font><Font name="Poppins Light" size="11.0" /></font>
                            </Label>

                            <TextField fx:id="txtPrecioMax"
                                       promptText="Max"
                                       style="-fx-background-color: white; -fx-border-color: black;
                                              -fx-padding: 6; -fx-background-radius: 6;" />
                        </HBox>
                    </VBox>


                    <!-- 游댳 Filtro: Condici칩n -->
                    <VBox spacing="12">
                        <Label text="Condici칩n:">
                            <font><Font name="Poppins SemiBold" size="15.0" /></font>
                        </Label>

                        <CheckBox fx:id="cbNuevo"
                                  text="Nuevo"
                                  style="-fx-font-family: 'Poppins Medium'; -fx-font-size: 13;" />

                        <CheckBox fx:id="cbUsado"
                                  text="Usado"
                                  style="-fx-font-family: 'Poppins Medium'; -fx-font-size: 13;" />
                    </VBox>


                    <!-- 游댳 Filtro: Ordenar por -->
                    <VBox spacing="12">
                        <Label text="Ordenar por:">
                            <font><Font name="Poppins SemiBold" size="15.0" /></font>
                        </Label>

                        <CheckBox fx:id="cbMenorPrecio"
                                  text="Menor precio"
                                  style="-fx-font-family: 'Poppins Medium'; -fx-font-size: 13;" />

                        <CheckBox fx:id="cbMayorPrecio"
                                  text="Mayor precio"
                                  style="-fx-font-family: 'Poppins Medium'; -fx-font-size: 13;" />

                        <CheckBox fx:id="cbRecomendado"
                                  text="Recomendado"
                                  style="-fx-font-family: 'Poppins Medium'; -fx-font-size: 13;" />

                        <CheckBox fx:id="cbMasRecientes"
                                  text="M치s recientes"
                                  style="-fx-font-family: 'Poppins Medium'; -fx-font-size: 13;" />
                    </VBox>


                    <!-- 游댠 BOT칍N APLICAR FILTROS -->
                    <Button fx:id="btnAplicarFiltros"
                            text="Aplicar Filtros"
                            onAction="#applyFiltersButton"
                            alignment="CENTER"
                            style="-fx-border-color: black; -fx-background-color: black;
                                   -fx-text-fill: white; -fx-padding: 8 20;
                                   -fx-background-radius: 6;">
                        <font><Font name="Poppins SemiBold" size="15.0" /></font>
                    </Button>

                </VBox>
            </content>

        </ScrollPane>
    </left>

</BorderPane>
